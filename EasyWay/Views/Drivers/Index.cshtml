@model IEnumerable<EasyWay.Models.Driver>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Drivers</h2>


<table id="drivers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Birthdate</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var driver in Model)
        {
        <tr>

            <td>@driver.Name</td>

            <td>@driver.Phone</td>

            <td>@driver.Birthdate</td>

            <td>
                <a href="@Url.Action("Edit", "Drivers", new { id = driver.Id })" class="btn btn-sm">
                    Edit
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>

            <td>
                <button data-driver-id="@driver.Id" class="btn-link js-delete">Delete</button>
            </td>

        </tr>

        }
    </tbody>

</table>
<p>

    @Html.ActionLink("New Driver", "New", "Drivers", null, new { @class = "btn btn-primary" })

</p>


@section scripts 
{
    <script>
        $(document).ready(function () {
            $("#drivers").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this driver?", function (result) {
                    if (result == true) {
                        $.ajax({
                            url: "/api/drivers/" + button.attr("data-driver-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }

                        });

                    }
                });
                
                    
            });
         
        });
    </script>
     
}