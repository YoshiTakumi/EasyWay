@model EasyWay.Models.Driver
@{
    /**/

    ViewBag.Title = "Drivers Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Driver</h2>

@using (Html.BeginForm("Save", "Drivers"))
{
    @Html.ValidationSummary(true, "An error occurred, please fix the following errors")
    <div class="form-group">
        @Html.LabelFor(d => d.Name)
        @Html.TextBoxFor(d => d.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(d => d.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(d => d.Birthdate)
        @Html.TextBoxFor(d => d.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(d => d.Birthdate)
    </div>


    <div class="form-group">
        @Html.LabelFor(d => d.Phone)
        @Html.TextBoxFor(d => d.Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(d => d.Phone)
    </div>

    @Html.HiddenFor(d => d.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>


}

@section scripts
{


    @Scripts.Render("~/bundles/jqueryval")

}