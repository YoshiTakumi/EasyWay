@model EasyWay.Models.Driver
@{
    /**/

    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Driver</h2>

@using (Html.BeginForm("Save", "Drivers"))
{
    <div class="form-group">
        @Html.LabelFor(d => d.Name)
        @Html.TextBoxFor(d => d.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(d => d.Birthdate)
        @Html.TextBoxFor(d => d.Birthdate, "{0:d MMM yyyy}" ,new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(d => d.Phone)
        @Html.TextBoxFor(d => d.Phone, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(d => d.Id)
    <button type="submit" class="btn btn-primary">Save</button>


}

