@model IEnumerable<EasyWay.Models.Package>
@{
    ViewBag.Title = "Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Package</h2>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Serial Number</th>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Address</th>
            <th>Date</th>
            <th>Delivery Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var package in Model)
        {
            <tr>

                <td>@package.SerialNumber</td>

                <td>@package.Sender</td>

                <td>@package.Receiver</td>

                <td>@package.ReceiverAddress</td>

                <td>@package.DateLeft</td>

                <td>@package.Delivered</td>



                <td>
                    <a href="@Url.Action("Edit", "Packages", new { id = package.Id })" class="btn btn-sm">
                        Edit
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>

            </tr>

        }
    </tbody>

</table>
<p>

    @Html.ActionLink("New Package", "New", "Packages", null, new { @class = "btn btn-primary" })

</p>
