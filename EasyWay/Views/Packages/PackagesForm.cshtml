@model EasyWay.ViewModels.PackageFormViewModel
@{
    ViewBag.Title = "Packages Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Package</h2>

@using (Html.BeginForm("Save", "Packages"))
{
    @Html.ValidationSummary(true, "An error occurred, please fix the following errors")
    <div class="form-group">
        @Html.LabelFor(p => p.Sender)
        @Html.TextBoxFor(p => p.Sender, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Sender)
    </div>




    <div class="form-group">
        @Html.LabelFor(p => p.Receiver)
        @Html.TextBoxFor(p => p.Receiver, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Receiver)
    </div>




    <div class="form-group">
        @Html.LabelFor(p => p.ReceiverAddress)
        @Html.TextBoxFor(p => p.ReceiverAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.ReceiverAddress)
    </div>




    <div class="form-group">
        @Html.LabelFor(p => p.Phone)
        @Html.TextBoxFor(p => p.Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Phone)
    </div>




    <div class="form-group">
        @Html.LabelFor(p => p.DateLeft)
        @Html.TextBoxFor(p => p.DateLeft, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.DateLeft)
    </div>




    <div class="form-group">
        @Html.LabelFor(p => p.SerialNumber)
        @Html.TextBoxFor(p => p.SerialNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.SerialNumber)
    </div>



    <div class="form-group">
        @Html.LabelFor(p => p.SizeOfPackageId)
        @Html.DropDownListFor(p => p.SizeOfPackageId, new SelectList(Model.SizeOfPackages, "Id", "Name"), "Pick a size", new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.SizeOfPackageId)
    </div>


    
    <div class="form-group">
        @Html.LabelFor(p => p.ChargeOfPackageId)
        @Html.DropDownListFor(p => p.ChargeOfPackageId, new SelectList(Model.ChargeOfPackages, "Id", "Name"), "Pick a region",new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Sender)
    </div>



    @Html.HiddenFor(p => p.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>

}


@section scripts
{
    
    @Scripts.Render("~/bundles/jqueryval")
    
}
